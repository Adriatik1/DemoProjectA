@model Domain.Models.RoleModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Create New Role";
}
<div class="row">
    <form asp-controller="Roles"
          asp-action="UpSertRole"
          asp-method="POST">

        <div class="row mt-4">
            @if (Model.Id != null)
            {
                <h2>Edit Role</h2>
            } else {
                <h2>Create New Role</h2>
            }

            <div class="form-group">
                <label asp-for="Name" class="form-label mt-4">
                    Name:
                </label>
                <input asp-for="Name" class="form-control" type="text" />
                <input asp-for="Id" type="hidden" />
            </div>

            <button type="submit" class="col-2 mt-5 ml-1 px-1 btn btn-primary">Submit</button>
        </div>

    </form>
</div>
