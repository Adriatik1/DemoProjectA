@model Domain.Models.ProductModel

@{
    ViewData["Title"] = "Create Product";
}

<div class="row">
    <form asp-controller="Products"
          asp-action="CreateNewProduct"
          asp-method="POST">

        <div class="row mt-4">
            <h2>Create New Product</h2>
            <div class="form-group">
                <label asp-for="Name" class="form-label mt-4">
                    Name:
                </label>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Stock" class="form-label mt-4">
                    Stock:
                </label>
                <input asp-for="Stock" type="number" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="CompanyOrigin" class="form-label mt-4">
                    Company Origin:
                </label>
                <input asp-for="CompanyOrigin" type="text" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Description" class="form-label mt-4">
                    Stock:
                </label>
                <input asp-for="Description" type="textarea" class="form-control" />
            </div>

            <button type="submit" class="col-2 mt-5 ml-1 px-1 btn btn-primary">Submit</button>
        </div>

    </form>
</div>


