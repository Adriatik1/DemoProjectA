@using Domain.Models
@model IEnumerable<ProductModel>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="text-center mt-6">
    <div class="row mt-1">
        <h2>Products</h2>

        @if (ViewBag.Message != "")
        {
            <h3>@ViewBag.Message</h3>
        }


        <a class="btn btn-primary col-2 mt-4" asp-action="CreateProduct" asp-controller="Products">
            Create New Product
        </a>

        <table class="table table-hover mt-1">
            <thead>
                <tr>
                    <th scope="col">Product Name</th>
                    <th scope="col">Unit Name</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Company Origin</th>
                    <th scope="col">Description</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-light">
                        <td>@item.Name</td>
                        <td>@item.UnitName</td>
                        <td>@item.Stock</td>
                        <td>@item.CompanyOrigin</td>
                        <td>@item.Description</td>
                        <th>
                            <a class="col-1" asp-controller="Products"
                           asp-action="CreateOrEditProduct" asp-route-id="@item.Id">
                                Edit
                            </a>
                        </th>
                        <th>
                            <a class="col-1" asp-controller="Products"
                           asp-action="DeleteProduct" asp-route-id="@item.Id">
                                Delete
                            </a>

                        </th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>